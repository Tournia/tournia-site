{
    "name": "Tournia",
    "description": "Tournia is an online platform to organize sports tournaments",
    "repository": "https://github.com/Tournia/tournia-site",
    "website": "https://tournia.net",
    "logo": "https://www.tournia.net/bundles/tsfront/img/app/logo.png",
    "keywords": ["node", "express", "static"],
    "success_url": "/welcome",
    "addons": ["jawsdb:kitefin", "papertrail"],
    "env": {
        "RAILS_ENV": "production",
        "HEROKU": "true",
        "SYMFONY__DB_URL": {
            "description": "Database connection url (use jawsdb:kitefin first, to get JAWSDB_URL)",
            "value": "'mysql://username:password@127.0.0.1:3306/database"
        }
    }
}