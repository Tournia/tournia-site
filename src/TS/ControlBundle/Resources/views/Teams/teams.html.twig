					teamHtml += "<td class=\"playerCell\" data-player-position=\"0\" colspan=\"" + teamObject['players'].length + "\">{{ 'teams.noPlayersForTeam'|trans({'%startLink%': startDeleteLink, '%endLink%': '</a>'})|raw }}</td>";
