				<div class="address">
					<h3>Our Address</h3>
					<p>
						The Old Road Willington, <br />
						7 Kings Road, <br />
						Southshore, 64890
					</p>
				</div>
-->
{#
				<div class="phone">
					<h3>By Phone</h3>
					<p>
						+31 6 23838495
					</p>
				</div>
#}
				<div class="social-media">
					<h3>{{ 'contact.social'|trans }}</h3>
                    <div class="icons">
                        <a class="twitter" href="https://twitter.com/Tournia"><span class="fa fa-twitter-square"></span></a>
                        <a class="facebook" href="https://www.facebook.com/tournia.net"><span class="fa fa-facebook-square"></span></a>
                        {# <a class="google-plus" href="#"><span class="fa fa-google-plus-square"></span></a> #}
                    </div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}