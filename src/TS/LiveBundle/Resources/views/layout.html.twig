{% extends "TSLiveBundle::base.html.twig" %}

{% block body %}

    <header id="site-header">
        <div id="header-navbar" class="navbar navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
{#
                        <button type="button" class="pull-left drawer-toggle navbar-btn">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
#}
                        <div class="navbar-title">
                            <div class="title">Tournament</div>
                            <div class="brand">
                                <span class="poweredBy">powered by</span>
                                Tournia.net
                            </div>
                        </div>
                        {% if app.request.attributes.get('_route') != 'ts_live_presentationscreen' %}
                            <button type="button" class="pull-right navbar-btn" role="search" data-target="player-search">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                            <form class="navbar-form" role="search">
                                <input type="text" class="form-control" placeholder="Search matches player">
                           </form>
                       {% endif %}
                    </div><!-- .col-md-12 -->
                </div><!-- .row -->
            </div><!-- .container -->
        </div><!-- header navbar -->
    
        <div id="sub-header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="tournament-title">
                            <h1>{{ tournament.name }}</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main id="content" role="main">
    
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    
                {% block content %}
                    <div class="content-tabs">
    
                        <div id="matches" class="content-tab active">
                            {% block matches_content %}{% endblock %}
                        </div><!-- /#matches -->
    
                        <div id="rankings" class="content-tab">
                            {% block rankings_content %}{% endblock %}
                        </div><!-- /#rankings -->

                        <div id="search" class="content-tab">
                            {% block search_content %}{% endblock %}
                        </div><!-- /#search -->
                    </div>

                    {% if app.request.attributes.get('_route') != 'ts_live_presentationscreen' %}
                        <a id="go-to-desktop" class="btn btn-link btn-sm btn-block" style="margin-top: 20px" href="{{ url('live_index', {'tournamentUrl':tournament.url}) }}?desktop=true">Go to desktop website</a>
                    {% endif %}

                {% endblock %}

                </div> <!-- /.col-md-12 -->
            </div> <!-- /.row -->
        </div>
    
    </main>


    <footer>  
        {% if app.request.attributes.get('_route') != 'ts_live_presentationscreen' %}
            <nav id="main-navbar" class="navbar" role="navigation">
                <ul class="nav">
                    <li class="active"><a href="#matches"><span class="glyphicon glyphicon-calendar"></span> Matches</a></li>    
                    <li><a href="#rankings"><span class="glyphicon glyphicon-bookmark"></span> Rankings</a></li>
    {#                 <li><a href="#"><span class="glyphicon glyphicon-user"></span> Players</a></li> #}
                </ul>
            </nav>
        {% endif %}
    </footer>
{% endblock %}