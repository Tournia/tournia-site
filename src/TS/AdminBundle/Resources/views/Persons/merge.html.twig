{% form_theme form 'TSFrontBundle::form.html.twig' %}

{% extends "TSAdminBundle::baseAdmin.html.twig" %}

{% block title "Merge persons" %}

{% block content %}
    {{ parent() }}

    <div class="row">
        <div class="col-md-12">
            <h2>Merge persons</h2>
            <form class="form-horizontal" action="{{ path('admin_persons_merge') }}" method="post" {{ form_enctype(form) }} role="form">
                {{ form_errors(form) }}
                {{ form_rest(form) }}

                <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> Merge persons</button>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}
